<body>
    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
        <button class="navbar-toggler navbar-toggler-right hidden-lg-up" type="button" data-toggle="collapse" data-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Teamify</a>

        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @Html.IsCurrent("Home", "Index")">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Dashboard <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item @Html.IsCurrent("Home", "About")">
                    <a class="nav-link" href="@Url.Action("About", "Home")">About <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item @Html.IsCurrent("Home", "Contact")">
                    <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

