@using Microsoft.AspNet.Identity
@using Teamify.Helpers
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav">
        <li class="nav-item @Html.IsCurrent("Manage", "Index")">
            <a href="@Url.Action("Index", "Manage")" title="Manage" class="nav-link">Hello @User.Identity.GetUserName()!</a>
        </li>
        <li class="nav-item">
            <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Log off</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item @Html.IsCurrent("Account", "Register")">
            <a href="@Url.Action("Register", "Account")" id="registerLink" class="nav-link">Register</a>
        </li>
        <li class="nav-item @Html.IsCurrent("Account", "Login")">
            <a href="@Url.Action("Login", "Account")" id="loginLink" class="nav-link">Log in</a>
        </li>
    </ul>
}
