@model Teamify.Models.Profile.UserProfileModel
@{
    ViewBag.Title = "Profile Details";
}

<div class="row justify-content-center mt-5">
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <strong>Edit profile</strong>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col">
                        @using (Html.BeginForm("Details", "Profile"))
                        {
                            
                        }
                        <div class="form-group row">
                            @Html.LabelFor(m => m.FirstName, new {@class = "col-md-3 form-control-label"})
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.FirstName, new {@class = "form-control"})
                                @Html.ValidationMessageFor(m => m.FirstName, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.LastName, new {@class = "col-md-3 form-control-label"})
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.LastName, new {@class = "form-control"})
                                @Html.ValidationMessageFor(m => m.LastName, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Bio, new {@class = "col-md-3 form-control-label"})
                            <div class="col-md-9">
                                @Html.TextAreaFor(m => m.Bio, new {@class = "form-control", @placeholder = "Say some words about yourself. Other people can see this information. Make it count! :)", @rows = "9"})
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>