@model Teamify.Models.Sport.CreateSportModel

@{
    ViewBag.Title = "Create sport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center mt-3">
    <div class="col-8">
        <div class="card">
            <h3 class="card-header">@Model.RequestSportName</h3>
            <div class="card-block">
                <h4 class="card-title">@Model.RequestSportDescription</h4>
                <p class="card-text">@Model.RequestSportRules</p>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-center mt-3">
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <strong>Create sport</strong>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col">
                        @using (Html.BeginForm("Create", "Sport", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.AddSportRequestId)
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="tab-content">
                                <div class="form-group row">
                                    @Html.LabelFor(m => m.NewSportName, new { @class = "col-md-3 form-control-label" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.NewSportName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.NewSportName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(m => m.NewSportDescription, new { @class = "col-md-3 form-control-label" })
                                    <div class="col-md-9">
                                        @Html.TextAreaFor(model => model.NewSportDescription, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.NewSportDescription, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(m => m.NewSportRules, new { @class = "col-md-3 form-control-label" })
                                    <div class="col-md-9">
                                        @Html.TextAreaFor(model => model.NewSportRules, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.NewSportRules, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="mt-5">
                                    <input type="submit" value="Request" class="btn btn-success btn-block" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


