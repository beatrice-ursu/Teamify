@model Teamify.Models.Sport.CreateSportModel

@{
    ViewBag.Title = "Create sport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mt-1">
    <h3 class="card-header">@Model.RequestSportName</h3>
    <div class="card-block">
        <h4 class="card-title">@Model.RequestSportDescription</h4>
        <p class="card-text">@Model.RequestSportRules</p>
    </div>
</div>
<br />
@using (Html.BeginForm("CreateSport", "Sport", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.AddSportRequestId)

    <h4>Create sport</h4>
        <hr />
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NewSportName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NewSportName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NewSportName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NewSportDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.NewSportDescription, new { @class = "form-control"  })
                    @Html.ValidationMessageFor(model => model.NewSportDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NewSportRules, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.NewSportRules, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NewSportRules, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create game" class="btn btn-success" />
                </div>
            </div>
        </div>
}
